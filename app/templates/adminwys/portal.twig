{% extends 'adminwys/layout' %}
{% block appStylos %}
    <style type="text/css">
        .skewed {
            position: absolute;
            top: 0;
            bottom: 0;
            right: 0;
            left: 0;
            width: 100%;
            height: 80%;
            background: #2c3e50;
            z-index: 0;
            transform: skewY(7deg);
            transform-origin: top right;
        }
        .center_ppal {
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1;
        }
    </style>
{% endblock %}
{% block appBody %}
    <div class="skewed"></div>
    <div class="col col-md-12 pt-md-5" id="ppal">
        <ppal></ppal>
    </div>
{% endblock %}
{% block appScript %}
    {% if config['build']['production'] %}
        <script src="assets/jscontrollers/portal/portal_STORE.min.js?{{ date()|date('U') }}"></script>
        <script src="assets/jscontrollers/portal/portal.min.js?{{ date()|date('U') }}"></script>
    {% else %}
        <script type="module" src="assets/jscontrollers/portal/portal.js?{{ date()|date('U') }}"></script>
    {% endif %}
{% endblock %}